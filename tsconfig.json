{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": [
      "es2015",
      "dom"
    ],
    "strict": true,
    "baseUrl": "src",
    "paths": {
      "@controllers/*": ["controllers/*"],
      "@enums/*": ["enums/*"],
      "@amperka/*": ["amperka-ts/*"],
    },
    "typeRoots": [
      "./node_modules/@types"
    ],
    "types": [
      "node",
      "espruino"
    ],
    "esModuleInterop": true,
    "moduleResolution": "node"
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/*.ts"
  ]
}
