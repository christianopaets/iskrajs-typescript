{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": [
      "es2015",
      "dom"
    ],
    "outDir": "tst-dist",
    "strict": true,
    "baseUrl": "src",
    "paths": {
      "@controllers/*": ["controllers/*"],
      "@enums/*": ["enums/*"],
      "@amperka/*": ["amperka-ts/*"]
    },
    "typeRoots": [
      "node_modules/@types"
    ],
    "esModuleInterop": true,
    "moduleResolution": "node"
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/*.ts"
  ]
}
